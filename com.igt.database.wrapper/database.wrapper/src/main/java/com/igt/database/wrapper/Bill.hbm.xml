<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Bill" table="BILL">
		<meta attribute="class-description">
			This class contains the bill details.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="totalValue" column="total_value" type="int" />
		<property name="purchaseDate" column="purchase_date" type="Date" />
		<many-to-one name="customer" column="customer_id" class="Customer" not-null="true"/>
	</class>
</hibernate-mapping>
